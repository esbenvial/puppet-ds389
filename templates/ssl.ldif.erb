dn: cn=encryption,cn=config
changetype: modify
replace: nsSSL3
nsSSL3: off
-
replace: nsSSLClientAuth
nsSSLClientAuth: allowed
-
add: nsSSL3Ciphers
nsSSL3Ciphers: +all
-
add: nsCertfile
nsCertfile: alias/slapd-ds1-cert8.db
-
add: nsKeyfile
nsKeyfile: alias/slapd-ds1-key3.db
-
add: nsTLS1
nsTLS1: on

dn: cn=config
changetype: modify
add: nsslapd-security
nsslapd-security: on
-
replace: nsslapd-ssl-check-hostname
nsslapd-ssl-check-hostname: off
-
replace: nsslapd-secureport
nsslapd-secureport: 636
